<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    android:background="@drawable/shape_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:id="@+id/question_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/question_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/material_dynamic_secondary20"
            android:layout_marginBottom="@dimen/big_pad"
            tools:text="@tools:sample/lorem"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_answer"
            android:layout_marginBottom="@dimen/small_pad"
            android:maxLines="2"
            tools:text="@tools:sample/lorem"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_answer"
            android:layout_marginBottom="@dimen/small_pad"
            android:maxLines="2"
            tools:text="@tools:sample/lorem/random"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_answer"
            android:layout_marginBottom="@dimen/small_pad"
            android:maxLines="2"
            tools:text="@tools:sample/lorem"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/question_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_answer"
            android:layout_marginBottom="@dimen/small_pad"
            android:maxLines="2"
            tools:text="@tools:sample/lorem/random"/>
    </RadioGroup>

</merge>