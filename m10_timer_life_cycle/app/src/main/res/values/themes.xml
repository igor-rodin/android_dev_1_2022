<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.M10_timer_life_cycle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_primary</item>
    </style>

    <style name="Theme.M10_timer_life_cycle" parent="Base.Theme.M10_timer_life_cycle" />

    <style name="CDT.Base.TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="CDT.TimerTextStyle" parent="CDT.Base.TitleTextStyle">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CDT.ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="strokeWidth">@dimen/btn_stroke_width</item>
        <item name="strokeColor">@color/cdt_btn_color_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/btn_stroke_width</item>
        <item name="android:textColor">@color/cdt_btn_color_selector</item>
    </style>
</resources>