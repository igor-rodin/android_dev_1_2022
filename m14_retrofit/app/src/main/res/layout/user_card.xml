<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_full_name"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            tools:text="@tools:sample/full_names" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/country_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_user_country"
            app:layout_constraintEnd_toStartOf="@id/user_country"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_full_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_country"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/country_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/country_icon"
            app:layout_constraintTop_toTopOf="@id/country_icon"
            tools:text="@tools:sample/cities" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/phone_icon"
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_user_phone"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/user_phone"
            app:layout_constraintTop_toBottomOf="@id/country_icon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_phone"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/phone_icon"
            app:layout_constraintStart_toEndOf="@id/phone_icon"
            app:layout_constraintEnd_toStartOf="@id/email_icon"
            app:layout_constraintTop_toTopOf="@id/phone_icon"
            tools:text="@tools:sample/us_phones" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/email_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_user_email"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@id/user_phone"
            app:layout_constraintBottom_toBottomOf="@id/user_phone"
            app:layout_constraintEnd_toStartOf="@id/user_email"
            app:layout_constraintStart_toEndOf="@id/user_phone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_email"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/phone_icon"
            app:layout_constraintTop_toTopOf="@id/phone_icon"
            app:layout_constraintStart_toEndOf="@id/email_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@tools:sample/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>