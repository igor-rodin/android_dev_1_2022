<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.M4_components" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="checkboxStyle">@style/Widget.Profile.CheckBox</item>
    </style>

    <style name="Theme.M4_components" parent="Base.Theme.M4_components" />

    <style name="Widget.Profile.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/turquoise</item>
        <item name="buttonIconTint">@color/white</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseTextView.InfoText">
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="FilledBox">
        <item name="boxBackgroundColor">@color/purple</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">@dimen/small_pad</item>
    </style>
</resources>